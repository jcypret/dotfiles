# Unix stuff
alias ln="ln -v" # use verbose when linking files
alias mkdir="mkdir -p" # create nested directories that don't already exist
alias path='echo $PATH | tr -s ":" "\n"' # pretty print path

# Better unix
alias cat="bat"
alias lg="lazygit"
alias ping="prettyping --nolegend"
alias top="btm --basic --fahrenheit"

# Better ls
alias ls="exa --group-directories-first --classify --git-ignore"
alias l="ls --long"
alias la="l --all"
alias lt="ls --tree --level=2"

# Antibody
alias zbundle="antibody bundle < ~/.zsh_plugins.txt > ~/.zsh_plugins.sh"

# Git
function git_main_branch() {
  if [[ -n "$(git branch --list main)" ]]; then
    echo main
  else
    echo master
  fi
}

alias g="git"
alias gcd="git checkout develop"
alias gcm='git checkout $(git_main_branch)'
alias gco="git checkout"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git pull"
alias gm="git merge"
alias gp="git push"
alias gss="git status -s"
alias gst="git status"

# Kitty
alias kd="kitty +kitten diff"

# Python
alias pi="pipenv install"
alias pu="pipenv uninstall"
alias psh="pipenv shell"
alias prun="pipenv run"

# Rails
alias -g RET="RAILS_ENV=test"
alias rc="rails console"
alias rdm="rake db:migrate"
alias rr="rake routes"
alias rs="rails server"

# Tmux
alias t="tat"
alias tml="tmux list-sessions"
alias tma="tmux -2 attach -t $1"
alias tmk="tmux kill-session -t $1"
alias :vsp="tmux split-window -h"
alias :sp="tmux split-window -v"

# Vim
alias e="$EDITOR"
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias :q="exit"

# z
alias j="z -I" # match autojump habit
alias zz="z -c" # restrict matches to subdirs of $PWD
alias zb="z -b" # quickly cd to the parent directory

# Flash the local DNS cache
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder;"

# Lists the ten most used commands.
alias history-stat="history 0 | awk '{print \$2}' | sort | uniq -c | sort -n -r | head"

# Copy public SSH key to clipboard
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | printf '=> Public key copied to pasteboard.\n'"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias myip="ifconfig | grep 'inet ' | grep -v 127.0.0.1 | awk '{print \$2}'"

# Development
alias barn="bundle && yarn"

# Useful when Rails doesn't give the port back.
# => killport 3000
killport() { lsof -ti:$1 | xargs kill -9 }

# Checkout git branch (including remote branches),
# sorted by most recent commit, limited to the last 30 branches
fbr() {
  local branches branch
  branches=$(git for-each-ref --count=30 --sort=-committerdate refs/heads/ --format="%(refname:short)") &&
  branch=$(echo "$branches" |
           fzf-tmux -d $(( 2 + $(wc -l <<< "$branches") )) +m) &&
  git checkout $(echo "$branch" | sed "s/.* //" | sed "s#remotes/[^/]*/##")
}

# Project directories
c() { cd ~/Code/$1; }
compctl -W ~/Code/ -/ c

desk() { cd ~/Desktop/$1; }
compctl -W ~/Desktop/ -/ desk

[[ -f ~/.aliases.local ]] && source ~/.aliases.local
