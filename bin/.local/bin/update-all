#!/bin/sh

current_dir=$PWD
cd ~/

echo "Updating all dependencies..."

brew upgrade --fetch-HEAD
echo "âœ… Homebrew Formulae and Casks"

cat .default-gems | xargs gem install
echo "âœ… Ruby Gems"

cat .default-npm-packages | xargs npm update -g
echo "âœ… NPM Packages"

cat .default-pipx-packages | xargs -n1 pipx install
pipx upgrade-all
echo "âœ… Python Packages"

echo "ğŸ‘ Done"

cd $current_dir
