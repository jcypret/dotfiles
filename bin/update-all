#!/bin/sh

current_dir=$PWD
cd ~/

echo "Updating all dependencies..."

brew upgrade --fetch-HEAD
echo "✅ Homebrew Formulae and Casks"

cat .default-gems | xargs gem install --silent
echo "✅ Ruby Gems"

cat .default-golang-pkgs | xargs go get -u
echo "✅ Golang Packages"

cat .default-npm-packages | xargs npm update -g
echo "✅ NPM Packages"

cat .default-python-packages | xargs pip install --upgrade --quiet
echo "✅ Python Packages"

echo "👍 Done"

cd $current_dir
